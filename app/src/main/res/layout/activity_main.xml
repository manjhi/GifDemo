<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/showGif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show GIF"/>

    <Button
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/showGif"
        android:id="@+id/showflowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Flowers"/>
    <Button
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/showflowers"
        android:id="@+id/showpresents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show presents"/>
    <ImageView
        android:scaleType="fitXY"
        android:layout_below="@id/showGif"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"/>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/recycler"
        android:visibility="visible"
        android:layout_below="@id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>